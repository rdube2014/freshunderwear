<div class="page-header">
  <h1>About fresh-underwear.com</h1>
</div>

<p><%= link_to 'Add a New Homepage', new_homepage_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @homepages.each do |homepage| %>
      <tr>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, homepage_url(homepage), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_homepage_url(homepage), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, homepage_url(homepage), method: 'delete', data: { confirm: "Do you really want to delete this homepage?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

