<h1>Users</h1>

<p><%= link_to 'Add a New User', new_user_url %></p>

<table>
  <thead>
    <tr>
      <th>User number</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Home city</th>
      <th>Home state</th>
      <th>Home country</th>
      <th>Email</th>
      <th>User name</th>
      <th>Password</th>
      <th>Security question</th>
      <th>Security answer</th>
      <th>Photo link</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.user_number %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.home_city %></td>
      <td><%= user.home_state %></td>
      <td><%= user.home_country %></td>
      <td><%= user.email %></td>
      <td><%= user.user_name %></td>
      <td><%= user.password %></td>
      <td><%= user.security_question %></td>
      <td><%= user.security_answer %></td>
      <td><%= user.photo_link %></td>
      <td><%= link_to 'Show', user_url(user) %></td>
      <td><%= link_to 'Edit', edit_user_url(user) %></td>
      <td><%= link_to 'Destroy', user_url(user), method: 'delete', data: { confirm: "Do you really want to delete this user?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

