<div class="page-header">
  <h1>New User</h1>
</div>

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>
 
  <div class="form-group">
    <%= label_tag :first_name, "First Name", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :first_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, "Last Name", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :last_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :home_city, "Home City", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :home_city, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :home_state, "Home State", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :home_state, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :home_country, "Home Country", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :home_country, "USA", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :user_name, "Username", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :user_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :photo_link, "Photo URL", class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <%= text_field_tag :photo_link, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create User", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
